<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ChatRoomActivity">

    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                app:popupTheme="@style/AppTheme.AppBarOverlay">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgUserRoom"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/colorMuted"
                        tools:src="@drawable/ic_logo_app"/>

                <TextView
                        android:id="@+id/tvUserMsgRoom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/colorWhite"
                        android:layout_toEndOf="@id/imgUserRoom"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="Username"/>

                <TextView
                        android:id="@+id/tvUserCityRoom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_toEndOf="@id/imgUserRoom"
                        android:layout_below="@id/tvUserMsgRoom"
                        android:textColor="@color/colorWhite"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="City"/>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
            android:id="@+id/frm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_chat_room"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:clipToPadding="false"
                tools:listitem="@layout/item_chat_room"/>
    </FrameLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toBottomOf="@id/frm"
            android:background="@color/colorWhite">

        <EditText
                android:id="@+id/et_message"
                android:layout_width="0dip"
                android:layout_weight="0.9"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:hint="@string/message_text"
                android:inputType="textMultiLine"
                android:ems="10"
                android:padding="10dp"
                android:textSize="14sp"
                android:textAlignment="textStart"/>

        <ImageButton
                android:id="@+id/btnSend"
                android:layout_width="0dip"
                android:layout_weight="0.1"
                android:contentDescription="@string/send"
                android:layout_height="match_parent"
                android:src="@drawable/ic_send"
                style="@style/Base.Widget.AppCompat.Button.Borderless"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>